<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/index.css">
    <h1 style="text-align: center; margin-top: 12px; color:rgb(108,117,125);">All Recipes</h1>
    <div style="text-align: center;"><a href="/recipes/new">Add A Recipe</a></div>
    <div class="row">
        <% for (let recipe of recipes) {%>
            <div class="card mb-3" style="width:18em; border-color:rgb(108,117,125);">
                <div class="col-md-8"> 
                    <div class="">
                        <img class="card-img-top" src=<%= recipe.images[0].url%> >
                    </div>
                        <div class="card-body">
                           <h5 class="card-title"> <%= recipe.title %> </h5>
                           <p class="card-text"> <%=recipe.instructions%></p>
                           <p class="card-text"> <%=recipe.ingredients%></p>
                           <p class="card-text">
                               <small class="text-muted"><%= recipe.cooktime %></small>
                               <small class="text-muted"><%= recipe.preptime %></small>
                           </p>
                            <a href="/recipes/<%= recipe._id%>" class="btn"> View <%=recipe.title%> </a>
                        </div>
                    </div>
                </div>
         <% }%>
        </div>
