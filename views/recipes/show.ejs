<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">
<link rel="stylesheet" href="/stylesheets/show.css">

<div class="row">
    <div class="header">
        <h1 class="title"><%= recipe.title%></h1>
        <span class="prep">Preptime - <%= recipe.preptime%> <%= recipe.prepUnit%>    </span>  
        <span class="cook">Cooktime - <%= recipe.cooktime%> <%= recipe.cookUnit%></span>
    </div>
   
    <div class="col-lg-8  offset-lg-2">
        <div id="recipeCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% recipe.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                    <img src="<%= img.url%>" class="d-block w-100" alt="">
                </div>
                <% }) %>

            </div>
            <% if(recipe.images.length > 1) {%>
            <a class="carousel-control-prev" href="#recipeCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            
            </a>
            <a class="carousel-control-next" href="#recipeCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                
            </a>
            <% } %>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                
                
                <li class="list-group-item text-muted">Submitted by <%= recipe.author.username%></li>

        <ul>
            
                <% for(let i=0; i<recipe.ingredients.length; i++) { %>
                     <%    const num = recipe.ingredients[i][0]%>
                     <%    const unit = recipe.ingredients[i][1] %>
                     <%    const label = recipe.ingredients[i][2]%>
                    <li> <%=num %> <%=unit%>, <%=label%> </li>
                    <% } %>
                
        </ul>
            </div>
       

            <ul class="list-group list-group-flush">
                <li class="list-group-item ">
                    <h4>Instructions</h3>
                    <%= recipe.instructions%>
                </li>
                <li class="list-group-item text-muted">
                    <h5>Notes</h5>
                    <%= recipe.notes%>
                </li>
            </ul>
            
            <%  if( currentUser && recipe.author.equals(currentUser._id))  {%>
            <div class="card-body">
                <a style="background:#9CAF88;" class="card-link btn" href="/recipes/<%=recipe._id%>/edit">Edit</a>
                <form class="d-inline" action="/recipes/<%=recipe._id%>?_method=DELETE" method="POST">
                    <button style="background:#E1AD9D;" class="btn">Delete</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>

    </div>
    <div class=" review col-lg-8 ">
        <% if(currentUser){ %>
        <h2>Leave a Review</h2>
        <form action="/recipes/<%=recipe._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
            <!-- <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div> -->
            <fieldset class="starability-basic">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <div class="mb-3">
                <label class="form-label" for="body">Add Your Review Text</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button style="background:#9CAF88;"class="btn">Submit</button>
        </form>
        <% } %>
        <% for(let review of recipe.reviews) { %>
        <div class="card mb-3 ">
            <div style="border:2px solid #9CAF88;" class="card-body">
                <h5 class="card-title"> <%= review.author.username%></h5>
                <p class="starability-result" data-rating="<%=review.rating%>">
                    Rated: <%= review.rating %> stars
                </p>
                <!-- <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username%></h6> -->
                <p class="card-text">Review: <%= review.body %></p>
                <%  if( currentUser && review.author.equals(currentUser._id))  {%>
                <form action="/recipes/<%=recipe._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                    <button style="background:#E1AD9D;"class="btn btn-sm ">Delete</button>
                </form>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>
</div>